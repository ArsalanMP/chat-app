:global body
  width: 100%
  height: 100%
  margin: 0px
.container
  text-align center 
  background-color: #e1e1e1
  box-sizing: border-box
  height: 100%
  padding: 30px

.myBtn
  padding 12px
  display: inline-block
  box-sizing border-box
  background-color #4286f4 
  width: 20%
  cursor pointer

.myInput
  padding: 12px
  display: inline-block
  width: 80%
  box-sizing: border-box
  

.column
  display inline-block
  vertical-align middle

.chatForm
  width: 100%
  
.listDiv
  margin-top: 30px
  display: block
  width: 100%